{{! 
	Template for mdk shell init script
	
	For CMD, every carriage return gets converted to " & "
	as well as consecutive ones gets replaced by only one amp.
}}

{{#win}}
@echo off
set PROMPT=$p$_MDK$sShell$s$g
{{/win}}
{{#bash}}
export PS1="\n\e[0;36m\w\nMDK Shell > \e[0m"
{{/bash}}

echo{{#win}}.{{/win}} {{#bash}}\n{{/bash}}
echo   8888ba.88ba  888888ba  dP     dP
echo   88  `8b  `8b 88    `8b 88   .d8'
echo   88   88   88 88     88 88aaa8P'
echo   88   88   88 88     88 88   `8b.
echo   88   88   88 88    .8P 88     88
echo   dP   dP   dP 8888888P  dP     dP
echo{{#win}}.{{/win}} {{#bash}}\n{{/bash}}
echo SHELL {{#win}}^>^>{{/win}}{{#bash}}\>\>{{/bash}} {{{platform}}} [ MDK Version {{{version}}} ]

{{#env}}
{{{.}}}
{{/env}}

{{#win}}set{{/win}}{{#bash}}export{{/bash}} PATH={{#pathvar}}{{{.}}};{{/pathvar}}{{#win}}%PATH%{{/win}}{{#bash}}$PATH{{/bash}}

{{#win}}
@echo on
{{/win}}
{{#bash}}
bash -i
{{/bash}}