{{! 
	Template for mdk shell init script
	
	For CMD, every carriage return gets converted to " & "
	as well as consecutive ones gets replaced by only one amp.
}}

{{#win}}
@echo off
set PROMPT=$p$_MDK$sShell$s$g$s
color 03
title MDK Shell {{{platform}}}
{{/win}}
{{#bash}}
clear
if [[ $SHELL == *"bash" ]]; then
    export PS1="\n\e[0;36m\w\nMDK Shell > \e[0m"
elif [[ $SHELL == *"zsh" ]]; then
    export PROMPT='%F{cyan}%{MDK%} %{Shell%} %#%f '
else
    export PS1="MDK Shell %"
fi
precmd() {
	if [[ $SHELL == *"zsh" ]]; then
		print -rP "%F{cyan}%~%f"
	fi
}
echo -n -e "\033]0;MDK Shell {{{platform}}}\007"
{{/bash}}

echo{{#win}}.{{/win}}
echo   {{#bash}}"{{/bash}}8888ba.88ba  888888ba  dP     dP{{#bash}}"{{/bash}}
echo   {{#bash}}"{{/bash}}88   8b   8b 88     8b 88   .d8{{#bash}}"{{/bash}}
echo   {{#bash}}"{{/bash}}88   88   88 88     88 88aaa8P{{#bash}}"{{/bash}}
echo   {{#bash}}"{{/bash}}88   88   88 88     88 88    8b.{{#bash}}"{{/bash}}
echo   {{#bash}}"{{/bash}}88   88   88 88    .8P 88     88{{#bash}}"{{/bash}}
echo   {{#bash}}"{{/bash}}dP   dP   dP 8888888P  dP     dP{{#bash}}"{{/bash}}
echo{{#win}}.{{/win}}
echo SHELL {{#win}}^>^>{{/win}}{{#bash}}\>\>{{/bash}} {{{platform}}} [ MDK Version {{{version}}} ]
echo{{#win}}.{{/win}}

{{#env}}
{{{.}}}
{{/env}}

{{#win}}set{{/win}}{{#bash}}export{{/bash}} PATH={{#pathvar}}{{{.}}}{{#win}};{{/win}}{{#bash}}:{{/bash}}{{/pathvar}}{{#win}}%PATH%{{/win}}{{#bash}}$PATH{{/bash}}

{{#bash}}
rm {{{scriptLoc}}}
{{/bash}} 
{{#win}}
DEL /f/q {{{scriptLoc}}} && @echo on
{{/win}}