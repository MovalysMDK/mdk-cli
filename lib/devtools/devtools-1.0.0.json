{
    "mdk_cli": {
        "minVersion": "1.0.0"
    },
    "install": [
        {
            "name": "jdk",
            "version": "1.7.0.79",
            "script": "common/installJdk",
            "os": ["osx"],
            "packages": [ {
                "url": "http://download.oracle.com/otn-pub/java/jdk/7u79-b15/jdk-7u79-macosx-x64.dmg",
                "filename": "jdk-7u79-macosx-x64.dmg",
                "checksum": "910ad1aa48cccdce6cac012ab7107e0707b2edbb",
                "headers": {
                    "Cookie": "oraclelicense=accept-securebackup-cookie"
                },
                "opts": {
                    "osxVolumePath" : "/Volumes/JDK 7 Update 79",
                    "extractedPkgDir": "jdk17079.pkg"
                }
            }],
            "opts": {},
            "diskSpace": 310
        },
        {
            "name": "apache-maven",
            "version": "3.3.3",
            "script": "common/installMaven",
            "os": ["osx"],
            "packages": [ {
                "url": "http://apache.mirror.anlx.net/maven/maven-3/3.3.3/binaries/apache-maven-3.3.3-bin.zip",
                "filename": "apache-maven-3.3.3-bin.zip",
                "checksum": "b8eebb7ba265532bf55aa17f89440c2fe267bed3",
                "headers": {
                },
                "opts": {}
            }],
            "opts": {},
            "diskSpace": 9
        },
        {
            "name": "cocoapods",
            "version": "0.37.2",
            "script": "ios/installCocoapods",
            "os": ["osx"],
            "platforms" : ["ios"],
            "opts": {
                "libDirectory" : "lib",
                "binDirectory" : "bin"
            },
            "diskSpace": 12
        }
    ],
    "checks": [
        {
            "script": "common/checkJdk"
        },
        {
            "script": "common/checkMaven"
        },
        {
            "script": "ios/checkCocoapods",
            "platforms": ["ios"]
        }
    ]
}