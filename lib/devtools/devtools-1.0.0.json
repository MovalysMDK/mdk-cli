                "headers": {
                },
                "opts": {}
            }],
            "opts": {},
            "diskSpace": 9
        },
        {
            "name": "cocoapods",
            "version": "0.37.2",
            "script": "ios/installCocoapods",
            "os": ["osx"],
            "platforms" : ["ios"],
            "opts": {
                "libDirectory" : "lib",
                "binDirectory" : "bin"
