<settings xmlns="http://maven.apache.org/SETTINGS/1.1.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.1.0 http://maven.apache.org/xsd/settings-1.1.0.xsd">

    <localRepository>{{{localRepositoryPath}}}</localRepository>
    <interactiveMode />
    <usePluginRegistry />
    <offline />
    <pluginGroups />

    <proxies>
        {{#proxyActive}}
        <proxy>
            <id>proxy</id>
            <active>{{{proxyActive}}}</active>
            <protocol>{{{proxyProtocol}}}</protocol>
            <host>{{{proxyHostname}}}</host>
            <port>{{{proxyPort}}}</port>
            <username>{{{proxyUsername}}}</username>
            <password>{{{proxyPassword}}}</password>
            <nonProxyHosts></nonProxyHosts>
        </proxy>
        {{/proxyActive}}
    </proxies>

    <servers>

        <server>
            <id>archetype</id>
            <username>{{{mdk_login}}}</username>
            <password>{{{mdk_password}}}</password>
        </server>

        <server>
            <id>prj-mdk-releases</id>
            <username>{{{mdk_login}}}</username>
            <password>{{{mdk_password}}}</password>
        </server>

        <server>
            <id>prj-mdk-plugin-releases</id>
            <username>{{{mdk_login}}}</username>
            <password>{{{mdk_password}}}</password>
        </server>

        {{#snapshotEnable}}
        <server>
            <id>prj-mdk-snapshots</id>
            <username>{{{mdk_login}}}</username>
            <password>{{{mdk_password}}}</password>
        </server>

        <server>
            <id>prj-mdk-plugin-snapshots</id>
            <username>{{{mdk_login}}}</username>
            <password>{{{mdk_password}}}</password>
        </server>
        {{/snapshotEnable}}

    </servers>

    <profiles>
        <profile>
            <id>mdk</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <android.sdk.path>{{{androidSdkPath}}}</android.sdk.path>
            </properties>
            <repositories>
                <repository>
                    <id>prj-mdk-releases</id>
                    <name>prj-mdk-releases</name>
                    <layout>default</layout>
                    <url>{{{mdkRepoRelease}}}</url>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                </repository>

                {{#snapshotEnable}}
                <repository>
                    <id>prj-mdk-snapshots</id>
                    <name>prj-mdk-snapshots</name>
                    <layout>default</layout>
                    <url>{{{mdkRepoSnapshots}}}</url>
                    <snapshots>
                        <enabled>true</enabled>
                    </snapshots>
                    <releases>
                        <enabled>false</enabled>
                    </releases>
                </repository>
                {{/snapshotEnable}}

            </repositories>

            <pluginRepositories>
                <pluginRepository>
                    <id>prj-mdk-plugin-releases</id>
                    <name>prj-mdk-plugin-releases</name>
                    <layout>default</layout>
                    <url>{{{mdkRepoPluginRelease}}}</url>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                </pluginRepository>

                {{#snapshotEnable}}
                <pluginRepository>
                    <id>prj-mdk-plugin-snapshots</id>
                    <name>prj-mdk-plugin-snapshots</name>
                    <layout>default</layout>
                    <url>{{{mdkRepoPluginSnapshots}}}</url>
                    <snapshots>
                        <enabled>true</enabled>
                    </snapshots>
                    <releases>
                        <enabled>false</enabled>
                    </releases>
                </pluginRepository>
                {{/snapshotEnable}}

            </pluginRepositories>
        </profile>
    </profiles>

</settings>